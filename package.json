{
  "name": "yjs-sync",
  "type": "module",
  "packageManager": "bun@1.1.2",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "clean": "rimraf packages/**/dist packages/**/dist node_modules",
    "dev": "turbo dev",
    "build": "turbo build",
    "build:release": "turbo build --filter=\"!*docs\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "build:docs": "turbo build --filter=\"*docs\"",
    "prepublishOnly": "nr build:release",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.15.0",
    "@antfu/ni": "^0.21.12",
    "@changesets/cli": "^2.27.1",
    "@types/bun": "latest",
    "@unocss/eslint-plugin": "^0.59.3",
    "eslint": "^9.0.0",
    "eslint-plugin-format": "^0.1.1",
    "rimraf": "^5.0.5",
    "turbo": "^1.13.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "vite-plugin-dts": "^3.9.0",
    "vitepress": "^1.1.3",
    "yjs": "^13.6.14"
  }
}
